#!/usr/bin/env ruby

require "qansible"

def main
  command = ARGV.shift
  option = nil
  runner = nil
  case command
  when "init"
    option = Qansible::Parser::Init.parse ARGV
    runner = Qansible::Command::Init.new(option)
  when "qa"
    option = Qansible::Parser::QA.parse ARGV
    runner = Qansible::Command::QA.new(option)
  else
    puts "unknown command `%s`" % [ command ]
    exit 1
  end

  runner.run
end

main
